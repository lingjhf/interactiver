{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@interactiver/core": ["./packages/core/src/index.ts"],
      "@interactiver/virtual-list": ["./packages/virtual-list/src/index.ts"],
      "@interactiver/scrollbar": ["./packages/scrollbar/src/index.ts"],
      "@interactiver/utils": ["./packages/utils/src/index.ts"],
      "@interactiver/view": ["./packages/view/src/index.ts"],
      "@interactiver/gestures": ["./packages/gestures/src/index.ts"],
      "@interactiver/keyboard": ["./packages/keyboard/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/dist/**", "**/node_modules/**", "**/playground/**"]
}
